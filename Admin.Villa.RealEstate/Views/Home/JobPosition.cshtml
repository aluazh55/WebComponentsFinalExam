@model List<JobPosition>

<table class="table table-hover">
	<thead>
		<tr>
			<th>
				#
			</th>
			
			<th>
				Title
			</th>
			<th>
				Description
			</th>
			<th>
				Edit
			</th>
			<th>
				Delete
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (JobPosition item in Model)
		{
			<tr>
				<td>
					@item.Id
				</td>
				<td>
					@item.Title
				</td>
				<td>
					@item.Description
				</td>
				<td>
					<a href="@Url.Action("EditJobPosition", "Home", new{id=item.Id})">Edit</a>
				</td>
				<td>
					<a href="@Url.Action("DeleteJobPosition", "Home", new{id=item.Id})">Delete</a>
				</td>
			</tr>
		}

	</tbody>
</table>

<br />
<hr />
<a href="@Url.Action("EditJobPosition", "Home")" class="brn btn-default">Add Position</a>
