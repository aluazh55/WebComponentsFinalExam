@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<main class="main">

    <!-- Page Title -->
    <div class="page-title light-background">
        <div class="container">
            <h1>@Localizer["Service"]</h1>
            
        </div>
    </div><!-- End Page Title -->
    <!-- Service Details Section -->
    <section id="service-details" class="service-details section">

        <div class="container">

            <div class="row gy-5">

                <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">

                    <div class="service-box">
                        <h4>@Localizer["Serices"]</h4>
                        <div class="services-list">
                            <a href="#" class="active"><i class="bi bi-arrow-right-circle"></i><span>@Localizer["Web"]</span></a>
                            <a href="#"><i class="bi bi-arrow-right-circle"></i><span>@Localizer["Web"]</span></a>
                            
                        </div>
                    </div><!-- End Services List -->

                    <!-- End Services List -->

                    <div class="help-box d-flex flex-column justify-content-center align-items-center">
                        <i class="bi bi-headset help-icon"></i>
                        <h4>@Localizer["Question"]</h4>
                        <p class="d-flex align-items-center mt-2 mb-0"><i class="bi bi-telephone me-2"></i> <span>+1 5589 55488 55</span></p>
                        <p class="d-flex align-items-center mt-1 mb-0"><i class="bi bi-envelope me-2"></i> <a href="mailto:contact@example.com">contact@example.com</a></p>
                    </div>

                </div>

                <div class="col-lg-8 ps-lg-5" data-aos="fade-up" data-aos-delay="200">
                    <img src="assets/img/services.jpg" alt="" class="img-fluid services-img">
                    <h3>@Localizer["Text1"]</h3>
                    <p>
                        @Localizer["Text2"]
                    <ul>
                        <li><i class="bi bi-check-circle"></i> <span>@Localizer["Text11"]</span></li>
                        <li><i class="bi bi-check-circle"></i> <span>@Localizer["Text12"]</span></li>
                        
                    </ul>
                    
                </div>

            </div>

        </div>

    </section><!-- /Service Details Section -->

</main>